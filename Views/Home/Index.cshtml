@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Home Page</h1>
    
    <!-- Corrected Image Path -->
    <img src="images/1.jpg" alt="Sample Image" />

    <!-- Navigation Link -->
    <a class="nav-link text-dark" asp-controller="Home" asp-action="Product">Product</a>

    <!-- Button for Dynamic Content -->
    <button onclick="loadContent('/Home/ProductDetails')">Load Product Details</button>

    <!-- Dynamic Content Placeholder -->
    <div id="dynamic-content">
        <!-- Dynamic content will be loaded here -->
    </div>
</div>

<!-- JavaScript for AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadContent(url) {
        $.get(url, function (data) {
            $("#dynamic-content").html(data);
        });
    }
</script>
